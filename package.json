{
	"name": "@skyra/decorators",
	"version": "1.2.0",
	"description": "TypeScript decorators for Skyra",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"author": "@skyra",
	"license": "MIT",
	"private": false,
	"scripts": {
		"prepublishOnly": "yarn build",
		"lint": "eslint --ext ts src tests --fix",
		"test": "jest",
		"docs": "typedoc",
		"build": "tsc -b src",
		"clean": "tsc -b src --clean",
		"watch": "tsc -b src -w",
		"up": "yarn upgrade-interactive --latest",
		"sversion": "standard-version",
		"commit": "git-cz",
		"cz": "git-cz"
	},
	"devDependencies": {
		"@commitlint/cli": "^9.1.1",
		"@commitlint/config-conventional": "^9.1.1",
		"@types/jest": "^26.0.7",
		"@types/ws": "^7.2.6",
		"@typescript-eslint/eslint-plugin": "^3.7.0",
		"@typescript-eslint/parser": "^3.7.0",
		"cz-conventional-changelog": "^3.2.0",
		"discord.js": "github:discordjs/discord.js#fe7df708e44e0280dfaf0f8e457b154781bb5140",
		"eslint": "^7.5.0",
		"eslint-config-bamboo": "^5.1.0",
		"husky": "^4.2.5",
		"jest": "^26.1.0",
		"jest-circus": "^26.1.0",
		"klasa": "github:dirigeants/klasa#settings",
		"lint-staged": "^10.2.11",
		"prettier": "^2.0.5",
		"standard-version": "^8.0.2",
		"ts-jest": "^26.1.3",
		"typedoc": "^0.17.8",
		"typescript": "^3.9.7"
	},
	"peerDependencies": {
		"discord.js": "github:discordjs/discord.js#fe7df708e44e0280dfaf0f8e457b154781bb5140",
		"klasa": "github:dirigeants/klasa#settings"
	},
	"files": [
		"dist",
		"!dist/tsconfig.tsbuildinfo"
	],
	"engines": {
		"node": ">=12"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/skyra-project/skyra-decorators.git"
	},
	"bugs": {
		"url": "https://github.com/skyra-project/skyra-decorators/issues"
	},
	"keywords": [
		"skyra",
		"typescript",
		"ts",
		"yarn",
		"discord",
		"bot",
		"decorators"
	],
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "yarn lint-staged"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.ts": [
			"prettier --write",
			"eslint --fix --ext ts"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"publishConfig": {
		"access": "public"
	}
}
